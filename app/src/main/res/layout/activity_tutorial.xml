<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.draw.tales.tutorial.TutorialActivity"
    android:background="@drawable/crumpled_paper_bg_purp">

    <android.support.v4.view.ViewPager
        android:id="@+id/tutorial_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.CardView
        android:id="@+id/tut_one_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp">
        <TextView
            android:id="@+id/tut_one_button_next_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_gradient"
            android:gravity="center"
            android:text="Continue"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="3"
            android:shadowDy="3"
            android:shadowDx="3"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
